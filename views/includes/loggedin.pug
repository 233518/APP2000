- var urlPath = urlPath;
- var admin = admin;
button.uk-button.uk-button-default.nav-buttons(type='button') #{__("NAV_ACCOUNT")}
div(uk-dropdown='animation: uk-animation-slide-top-small;')
  ul.uk-nav.uk-dropdown-nav
    if admin
      li
        a(href=`/${urlPath}/admin/admindashboard`) #{__("NAV_ADMIN_DASHBOARD")}
    li
      a(href=`/${urlPath}/user/dashboard`) #{__("NAV_MYACCOUNT")}
    li
      a(href=`/${urlPath}/user/dashboard?error=redirected&errorType=favorites`) #{__("NAV_FAVORITES")}
    li
      a(href=`/${urlPath}/user/dashboard?error=redirected&errorType=watchlist`) #{__("DASHBOARD_SWITCHER_WATCHLIST")}
    li
      a(href=`/${urlPath}/user/dashboard?error=redirected&errorType=mylist`) #{__("DASHBOARD_SWITCHER_LISTS")}
    li
      a(href=`/${urlPath}/auth/logout`) #{__("NAV_LOGOUT")}
