- var user = user
- var userStatsPug = JSON.parse(userStats)
script.
    var userStats = !{userStats};

.container.uk-padding-medium
    .upcomingMovies.uk-grid(class='uk-width-1-1@s')
        .uk-width-1-1
            h1.uk-text-center #{__("DASHBOARD_STATISTICS_TITLE")}
            hr.uk-divider-icon
            .uk-text-center(class='uk-child-width-1-2@s' uk-grid='')
                div.uk-margin-top
                    p.uk-text-large.uk-text-bold #{__("DASHBOARD_STATISTICS_REVIEWS")}
                    p.uk-text-large= userStatsPug.reviews
                div.uk-margin-top
                    p.uk-text-large.uk-text-bold #{__("DASHBOARD_STATISTICS_LISTS")}
                    p.uk-text-large= user.lists.length
            hr.uk-divider-icon
            .uk-text-center(class='uk-child-width-1-3@s' uk-grid='')
                div.uk-margin-top
                    p.uk-text-large.uk-text-bold #{__("DASHBOARD_STATISTICS_TOTAL_RUNTIME")}
                    p.uk-text-large= `${userStatsPug.runtimeTotal.hours} #{__("DASHBOARD_STATISTICS_HOURS")} ${userStatsPug.runtimeTotal.minutes} #{__("DASHBOARD_STATISTICS_MINUTES")}`
                div.uk-margin-top
                    p.uk-text-large.uk-text-bold #{__("DASHBOARD_STATISTICS_MOVIE_RUNTIME")}
                    p.uk-text-large=`${userStatsPug.runtimeMovie.hours} #{__("DASHBOARD_STATISTICS_HOURS")} ${userStatsPug.runtimeMovie.minutes} #{__("DASHBOARD_STATISTICS_MINUTES")}`
                div.uk-margin-top
                    p.uk-text-large.uk-text-bold #{__("DASHBOARD_STATISTICS_TV_RUNTIME")}
                    p.uk-text-large=`${userStatsPug.runtimeTv.hours} #{__("DASHBOARD_STATISTICS_HOURS")} ${userStatsPug.runtimeTv.minutes} #{__("DASHBOARD_STATISTICS_MINUTES")}`
            hr.uk-divider-icon
        #containerWatched.uk-width-1-1
        #containerFavorite.uk-width-1-1
        #genreWatched.uk-width-1-1
        #genreFavorited.uk-width-1-1