- var user = user
- var userStatsPug = JSON.parse(userStats)
script.
    var userStats = !{userStats};

.container.uk-padding-medium
    .upcomingMovies.uk-grid(class='uk-width-1-1@s')
        .uk-width-1-1
            h1.uk-text-center #{__("DASHBOARD_STATISTICS_TITLE")}
            hr.uk-divider-icon
            .uk-text-center(class='uk-child-width-1-3@s' uk-grid='')
                div.uk-margin-top
                    p.uk-text-large.uk-text-bold="Reviews created"
                    p.uk-text-large= userStatsPug.reviews
                div.uk-margin-top
                    p.uk-text-large.uk-text-bold="Lists created"
                    p.uk-text-large= user.lists.length
                div.uk-margin-top
                    p.uk-text-large.uk-text-bold="HJELP"
                    p.uk-text-large="2"
            hr.uk-divider-icon
            .uk-text-center(class='uk-child-width-1-3@s' uk-grid='')
                div.uk-margin-top
                    p.uk-text-large.uk-text-bold="Total runtime" 
                    p.uk-text-large= "100 hours 10 minutes"
                div.uk-margin-top
                    p.uk-text-large.uk-text-bold="Movie runtime"
                    p.uk-text-large=`${userStatsPug.runtimeMovie.hours} hours ${userStatsPug.runtimeMovie.minutes} minutes`
                div.uk-margin-top
                    p.uk-text-large.uk-text-bold="Tv-shows runtime"
                    p.uk-text-large=`${userStatsPug.runtimeTv.hours} hours ${userStatsPug.runtimeTv.minutes} minutes`
            hr.uk-divider-icon
        #containerWatched.uk-width-1-2
        #containerFavorite.uk-width-1-2
        hr.uk-divider-icon
        #contaianerGenres.uk-width-1-1